{
  "type": "module",
  "name": "localconnect-backend",
  "version": "1.0.0",
  "description": "Backend API for LocalConnect - A location-based community platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node start.js",
    "dev": "nodemon start.js",
    "prod": "NODE_ENV=production node start.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "seed": "node src/scripts/seedDatabase.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "db:create": "sequelize-cli db:create",
    "db:drop": "sequelize-cli db:drop",
    "db:reset": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "check-format": "prettier --check src/",
    "build": "echo 'No build step required for Node.js'",
    "postinstall": "echo 'Post-install script completed'",
    "health": "curl -f http://localhost:${PORT:-5000}/health || exit 1",
    "test:db": "node test-supabase-connection.js",
    "install:prod": "npm install --omit=dev",
    "install:dev": "npm install"
  },
  "keywords": [
    "localconnect",
    "community",
    "location",
    "social",
    "marketplace",
    "jobs"
  ],
  "author": "LocalConnect Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.41.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "firebase-admin": "^13.4.0",
    "geolib": "^3.3.4",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "oauth-1.0a": "^2.2.6",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "qrcode": "^1.5.4",
    "redis": "^4.6.11",
    "sequelize": "^6.35.2",
    "sharp": "^0.32.6",
    "socket.io": "^4.7.4",
    "speakeasy": "^2.0.0",
    "stripe": "^14.9.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^4.19.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/localconnect-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/localconnect-backend/issues"
  },
  "homepage": "https://github.com/your-username/localconnect-backend#readme"
}
